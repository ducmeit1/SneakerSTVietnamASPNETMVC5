@using SneakerSTVietnamMVC.Models
@{
    ViewBag.Title = "View Invoice";
    Layout = "~/Views/Layout/_LayoutMaster.cshtml";
}

<section id="editaccount">
    <div class="container">
        <h1>My Account</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "Home")
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("My Account", "Index", "Account")
            </li>
            <li class="breadcrumb-item active">My Orders</li>
        </ol>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <td><a href="@Url.Action("Index")">My Account</a></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr><td><a href="@Url.Action("ChangePassword")">Change Password</a></td></tr>
                        <tr><td><a href="@Url.Action("EditAccount")">Edit Account</td></a></tr>
                        <tr><td style="color: #FFF; background-color: #000">My Orders</td></tr>
                    </tbody>
                </table>
            </div>
            <div class="col-lg-12">
                <h3 class="text-left">My Orders:</h3>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Invoice ID</th>
                            <th>Billing Email</th>
                            <th>Last Name</th>
                            <th>Payment Method</th>
                            <th>Delivery Method</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Invoice item in ViewBag.Invoice)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => item.InvoiceID)</td>
                                <td>@Html.DisplayFor(m => item.Email)</td>
                                <td>@Html.DisplayFor(m => item.LastName)</td>
                                <td>@Html.DisplayFor(m => item.PaymentMethod)</td>
                                <td>@Html.DisplayFor(m => item.DeliveryMethod)</td>
                                <td>@Html.DisplayFor(m => item.InvoiceStatu.InvoiceStatusName)</td>
                                <td><a href="@Url.Action("View", "ViewInvoice", new { InvoiceID = item.InvoiceID })" title="View Invoice">View Invoice</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>


