@model SneakerSTVietnamMVC.Models.User
@using SneakerSTVietnamMVC.Models
@{
    ViewBag.Title = "My Account";
    Layout = "~/Views/Layout/_LayoutMaster.cshtml";
}
<section id="account">
    <div class="container">
        <h1>My Account</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "Home")
            </li>
            <li class="breadcrumb-item active">My Account</li>
        </ol>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <td style="color: #FFF; background-color: #000">My Account</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr><td><a href="@Url.Action("ChangePassword")">Change Password</a></td></tr>
                        <tr><td><a href="@Url.Action("EditAccount")">Edit Account</td></a></tr>
                        <tr><td><a href="@Url.Action("ViewInvoice")">My Orders</td></a></tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-9">
                <table class="table table-bordered table-striped">
                    <tbody>
                        <tr>
                            <td>Email: </td>
                            <td>@Html.DisplayFor(m => Model.Email)</td>
                        </tr>
                        <tr>
                            <td>First Name: </td>
                            <td>@Html.DisplayFor(m => Model.FirstName)</td>
                        </tr>
                        <tr>
                            <td>Last Name: </td>
                            <td>@Html.DisplayFor(m => Model.LastName)</td>
                        </tr>
                        <tr>
                            <td>Address: </td>
                            <td>@Html.DisplayFor(m => Model.Address)</td>
                        </tr>
                        <tr>
                            <td>City: </td>
                            <td>@Html.DisplayFor(m => Model.City)</td>
                        </tr>
                        <tr>
                            <td>State: </td>
                            <td>@Html.DisplayFor(m => Model.State)</td>
                        </tr>
                        <tr>
                            <td>Postcode: </td>
                            <td>@Html.DisplayFor(m => Model.Postcode)</td>
                        </tr>
                        <tr>
                            <td>Country: </td>
                            <td>@Html.DisplayFor(m => Model.Country)</td>
                        </tr>
                        <tr>
                            <td>Phone Number: </td>
                            <td>@Html.DisplayFor(m => Model.PhoneNumber)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        @if (ViewBag.Invoice != null)
            {
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="text-left">Recent your invoice here</h3>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Invoice ID</th>
                                <th>Billing Email</th>
                                <th>Last Name</th>
                                <th>Payment Method</th>
                                <th>Delivery Method</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(Invoice item in ViewBag.Invoice)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => item.InvoiceID)</td>
                                    <td>@Html.DisplayFor(m => item.Email)</td>
                                    <td>@Html.DisplayFor(m => item.LastName)</td>
                                    <td>@Html.DisplayFor(m => item.PaymentMethod)</td>
                                    <td>@Html.DisplayFor(m => item.DeliveryMethod)</td>
                                    <td>@Html.DisplayFor(m => item.InvoiceStatu.InvoiceStatusName)</td>
                                    <td><a href="@Url.Action("View", "ViewInvoice", new { InvoiceID = item.InvoiceID })" title="View Invoice">View Invoice</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</section>

