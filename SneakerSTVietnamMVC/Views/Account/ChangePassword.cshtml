@model SneakerSTVietnamMVC.Models.DataView.ViewChangePassword
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Layout/_LayoutMaster.cshtml";
}

<section id="changepassword">
    <div class="container">
        <h1>My Account</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "Home")
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("My Account", "Index", "Account")
            </li>
            <li class="breadcrumb-item active">Change Password</li>
        </ol>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <td><a href="@Url.Action("Index")">My Account</a></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr><td style="color: #FFF; background-color: #000">Change Password</td></tr>
                        <tr><td><a href="@Url.Action("EditAccount")">Edit Account</td></a></tr>
                        <tr><td><a href="@Url.Action("ViewInvoice")">My Orders</a></td></tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-9">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Please enter correct password at below to change your password
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <h3>Change Password</h3>
                            <div class="form-group">
                                @Html.LabelFor(m => m.CurrentPassword)
                                @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.NewPassword)
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmNewPassword)
                                @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ConfirmNewPassword, "", new { @class = "text-danger" })
                            </div>
                            <input type="submit" value="CHANGE PASSWORD" class="btn btn-lg btn-success">
                            <br /><br />
                            <p class="text-danger">@ViewBag.Message</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


