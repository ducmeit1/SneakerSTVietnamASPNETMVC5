
@{
    ViewBag.Title = "Confirm Register";
    Layout = "~/Views/Layout/_LayoutMaster.cshtml";
}

<section id="confirmregisterl">
    <div class="container">
        <h1>Register</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
               @Html.ActionLink("Home", "Index", "Home")
            </li>
            <li class="breadcrumb-item active">Register</li>
        </ol>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center panel-success">
                <h1>Congratulation! You registed successful.</h1>
                <p>An email sent to your email @ViewBag.Email, please check our email and confirm your email address before login</p>
                <p>If you want to sent that email again please clicking by @Html.ActionLink("here", "SendConfirmEmail", "Account").</p>
            </div>
        </div>
    </div>
</section>
<section id="foward">
    <div class="container">
        <div class="text-center">
            @Html.ActionLink("RETURN TO HOME PAGE", "Index", "Home", null, new { @class = "btn btn-primary btn-lg" })
        </div>
    </div>
</section>
