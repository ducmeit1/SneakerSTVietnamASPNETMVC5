
@{
    ViewBag.Title = "Access Denied";
    Layout = "~/Views/Layout/_LayoutMaster.cshtml";
}

<section id="error">
    <div class="container">
        <h1>Access Denied</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "Home")
            </li>
            <li class="breadcrumb-item active">Access Denied</li>
        </ol>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>ACCESS DENIED</h1>
                <h3 class="text-danger">
                    Sorry. You haven't permit to access to that page. <br />
                    @if (ViewBag.Banned != null)
                    {
                        @ViewBag.Banned
                    }
                    Please contact to Administrator to know more information!
                </h3>
            </div>
        </div>
    </div>
</section>
<section id="foward">
    <div class="container">
        <div class="text-center">
            @Html.ActionLink("RETURN TO HOME PAGE", "Index", "Home", null, new { @class = "btn btn-primary btn-lg" })
        </div>
    </div>
</section>