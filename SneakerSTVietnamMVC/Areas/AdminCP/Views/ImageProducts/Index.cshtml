@model IEnumerable<SneakerSTVietnamMVC.Models.ImageProduct>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminCP/Views/Shared/_LayoutAdminCP.cshtml";
}

<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="container-fluid">
            <div class="panel panel-headline">
                <div class="panel-heading">
                    <h1 class="panel-title">Image List</h1>
                    <p class="panel-subtitle"></p>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            @if (TempData["AddSuccess"] != null)
                            {
                                @Html.Raw(TempData["AddSuccess"])
                            }
                            <div class="form-group">@Html.ActionLink("CREATE IMAGE PRODUCT", "Create", null, new { @class = "btn btn-success btn-md" })</div>
                            <table class="table table-bordered">
                                <tr>
                                    <th>
                                        Image ID
                                    </th>
                                    <th>
                                        Brand
                                    </th>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Display
                                    </th>
                                    <th>
                                        Product Name
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ImageID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Product.Category.CategoryName)
                                        </td>
                                        <td>
                                            <img src="../../@Html.DisplayFor(modelItem => item.ImageURL)" class="img-thumbnail" alt="Image Product @Html.DisplayFor(modelItem => item.Product.ProductName)" style="max-height: 50px" />
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsDisplay)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Product.ProductName)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.ImageID }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.ImageID }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.ImageID })
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>