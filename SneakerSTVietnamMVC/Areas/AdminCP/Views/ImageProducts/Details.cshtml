@model SneakerSTVietnamMVC.Models.ImageProduct

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/AdminCP/Views/Shared/_LayoutAdminCP.cshtml";
}

<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="container-fluid">
            <div class="panel panel-headline">
                <div class="panel-heading">
                    <h1 class="panel-title">Detail Image: @Html.DisplayFor(model => model.ImageID)</h1>
                    <p class="panel-subtitle"></p>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-8">
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    Image URL:
                                </dt>
                                <dd>
                            @Html.DisplayFor(model => model.ImageURL)
                                </dd>
                                <dt>
                                    Image:
                                </dt>

                                <dd>
                                    <img src="../../../@Html.DisplayFor(model => model.ImageURL)" class="img-responsive" />
                                </dd>

                                <dt>
                                    Display:
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.IsDisplay)
                                </dd>

                                <dt>
                                    Product Name:
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Product.ProductName)
                                </dd>
                                <dt>
                                    Category:
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Product.Category.CategoryName)
                                </dd>
                            </dl>

                            <p>
                                @Html.ActionLink("Edit", "Edit", new { id = Model.ImageID }) |
                                @Html.ActionLink("Back to List", "Index")
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>