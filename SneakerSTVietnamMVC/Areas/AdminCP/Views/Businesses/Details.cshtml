@model SneakerSTVietnamMVC.Models.Business

@{
    ViewBag.Title = "Details Business";
    Layout = "~/Areas/AdminCP/Views/Shared/_LayoutAdminCP.cshtml";
}

<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="container-fluid">
            <div class="panel panel-headline">
                <div class="panel-heading">
                    <h1 class="panel-title">Detail Business: @Html.DisplayFor(model => model.BusinessName)</h1>
                    <p class="panel-subtitle"></p>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-8">
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    Business Name:
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.BusinessName)
                                </dd>

                                <dt>
                                    Description:
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.BusinessDescription)
                                </dd>

                                <dt>
                                    Area Name:
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.AreaName)
                                </dd>

                            </dl>

                            <p>
                                @Html.ActionLink("Edit", "Edit", new { id = Model.BusinessID }) |
                                @Html.ActionLink("Back to List", "Index")
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
