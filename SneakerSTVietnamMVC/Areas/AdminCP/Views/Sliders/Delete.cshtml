@model SneakerSTVietnamMVC.Models.Slider

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/AdminCP/Views/Shared/_LayoutAdminCP.cshtml";
}

<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="container-fluid">
            <div class="panel panel-headline">
                <div class="panel-heading">
                    <h1 class="panel-title">Delete Slider: @Html.DisplayFor(model => model.SlideID)</h1>
                    <p class="panel-subtitle"></p>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-8">
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    Slide ID:
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.SlideID)
                                </dd>
                                <dt>
                                    Slide Name:
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.SlideName)
                                </dd>

                                <dt>
                                    Description:
                                </dt>

                                <dd>
                                    <p class="text-justify">@Html.DisplayFor(model => model.Slide_Description)</p>
                                </dd>

                                <dt>
                                    Link:
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.SlideLink)
                                </dd>

                                <dt>
                                    Button Name:
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.SlideButtonName)
                                </dd>

                                <dt>
                                    Image:
                                </dt>

                                <dd>
                                    <img src="../../../@Html.DisplayFor(model => model.SliderImage)" class="img-responsive" />
                                </dd>

                                <dt></dt>
                                <dd>
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-actions no-color">
                                            <input type="submit" value="DELETE" class="btn btn-default" onclick="return confirm('Do you wanna delete this slider?');" />
                                            <br />

                                        </div>
                                    }
                                </dd>
                            </dl>
                            <div>
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>