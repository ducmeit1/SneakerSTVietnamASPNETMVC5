@model SneakerSTVietnamMVC.Models.Category

@{
    ViewBag.Title = "Detail Category";
    Layout = "~/Areas/AdminCP/Views/Shared/_LayoutAdminCP.cshtml";
}

<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="container-fluid">
            <div class="panel panel-headline">
                <div class="panel-heading">
                    <h1 class="panel-title">Detail Category: @Html.DisplayFor(model => model.CategoryName)</h1>
                    <p class="panel-subtitle"></p>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-8">
                            <hr/>
                            <dl class="dl-horizontal">
                                <dt>
                                    Category ID:
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.CategoryID)
                                </dd>
                                <dt>
                                    Category Name:
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.CategoryName)
                                </dd>

                                <dt>
                                    Category Logo:
                                </dt>

                                <dd>
                                    <img src="../../../@Html.DisplayFor(model => model.CategoryLogo)" class="img-responsive" style="max-height: 100px" />
                                </dd>
                                
                                <dt>
                                    Description:
                                </dt>

                                <dd>
                                    <p class="text-justify">@Html.DisplayFor(model => model.CategoryDescription)</p>
                                </dd>

                            </dl>
                            <p>
                                @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryID }) |
                                @Html.ActionLink("Back to List", "Index")
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
