@model SneakerSTVietnamMVC.Models.Category

@{
    ViewBag.Title = "Edit Category";
    Layout = "~/Areas/AdminCP/Views/Shared/_LayoutAdminCP.cshtml";
}

<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="container-fluid">
            <div class="panel panel-headline">
                <div class="panel-heading">
                    <h1 class="panel-title">Edit Category: @Html.DisplayFor(m => m.CategoryName) </h1>
                    <p class="panel-subtitle"></p>
                </div>
                <div class="panel-body">
                    <div class="row">

                        <div class="col-md-8">
                            <hr/>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.CategoryID)

                                    <div class="form-group">
                                        <label for="CategoryName" class="control-label col-md-2">Category Name: (*)</label>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="Category Logo" class="control-label col-md-2">Category Logo: (*)</label>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.CategoryLogo, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.CategoryLogo, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="CategoryDescription" class="control-label col-md-2">Category Description: (*)</label>
                                        <div class="col-md-10">
                                            @Html.TextAreaFor(model => model.CategoryDescription, new { @class = "form-control", rows="10" } )
                                            @Html.ValidationMessageFor(model => model.CategoryDescription, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Save" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>
                            }

                            <div>
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

