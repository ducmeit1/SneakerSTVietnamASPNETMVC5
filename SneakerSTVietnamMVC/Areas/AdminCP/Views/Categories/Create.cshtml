@using SneakerSTVietnamMVC.Models.DataView;
@model CategoryUploadView
@{
    ViewBag.Title = "Add Category";
    Layout = "~/Areas/AdminCP/Views/Shared/_LayoutAdminCP.cshtml";
}

<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="container-fluid">
            <div class="panel panel-headline">
                <div class="panel-heading">
                    <h1 class="panel-title">Create Category</h1>
                    <p class="panel-subtitle">Enter detail at below to add a new category</p>
                </div>
                <div class="panel-body">
                    <div class="row">

                        <div class="col-md-8">
                            @if (ViewBag.Message != null)
                            {
                                @Html.Raw(ViewBag.Message);
                            }
                            <hr />
                            <div class="form-group">
                                @using (Html.BeginForm("Create", "Categories", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CategoryID)
                                        @Html.EditorFor(model => model.CategoryID, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CategoryName)
                                        @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CategoryLogo)
                                        <input type="file" name="CategoryLogo" class="form-control" />
                                        @Html.ValidationMessageFor(model => model.CategoryLogo, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CategoryDescription)
                                        @Html.TextAreaFor(model => model.CategoryDescription, new { @class = "form-control", @rows = "10" })
                                        @Html.ValidationMessageFor(model => model.CategoryDescription, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="CREATE" class="btn btn-lg btn-block btn-primary" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
