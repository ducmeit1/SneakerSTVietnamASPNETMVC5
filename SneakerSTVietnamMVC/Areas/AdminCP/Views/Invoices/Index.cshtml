@model IEnumerable<SneakerSTVietnamMVC.Models.Invoice>

@{
    ViewBag.Title = "Invoces";
    Layout = "~/Areas/AdminCP/Views/Shared/_LayoutAdminCP.cshtml";
}

<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="container-fluid">
            <div class="panel panel-headline">
                <div class="panel-heading">
                    <h1 class="panel-title">Invoice List</h1>
                    <p class="panel-subtitle"></p>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            @if (TempData["AddSuccess"] != null)
                            {
                                @Html.Raw(TempData["AddSuccess"])
                            }
                            <div class="form-group">@Html.ActionLink("CREATE INVOICE", "Invoices", null, new { @class = "btn btn-success btn-md" })</div>
                            <table class="table table-bordered">
                                <tr>
                                    <th>
                                        First Name
                                    </th>
                                    <th>
                                        Last Name
                                    </th>
                                    <th>
                                        Billing Email
                                    </th>
                                    <th>
                                        Phone Number
                                    </th>
                                    <th>
                                        Country
                                    </th>
                                    <th>
                                        Payment Method
                                    </th>
                                    <th>
                                        Delivery Method
                                    </th>
                                    <th>
                                        Status
                                    </th>
                                    <th>
                                        Email User
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FirstName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LastName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Country)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PaymentMethod)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DeliveryMethod)
                                        </td>
                                        <td>
                                            <b>@Html.DisplayFor(modelItem => item.InvoiceStatu.InvoiceStatusName)</b>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.User.Email)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.InvoiceID }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.InvoiceID }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.InvoiceID })
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
