@model SneakerSTVietnamMVC.Models.Product

@{
    ViewBag.Title = "Delete Product";
    Layout = "~/Areas/AdminCP/Views/Shared/_LayoutAdminCP.cshtml";
}

<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="container-fluid">
            <div class="panel panel-headline">
                <div class="panel-heading">
                    <h1 class="panel-title">Delete Product: @Html.DisplayFor(model => model.ProductName)</h1>
                    <p class="panel-subtitle"></p>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-8">
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>Product ID:</dt>
                                <dd>@Html.DisplayFor(m => m.ProductID)</dd>
                                <dt>
                                    Product Name:
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.ProductName)
                                </dd>

                                <dt>
                                    Description:
                                </dt>

                                <dd>
                                    <p class="text-justify">@Html.DisplayFor(model => model.Description)</p>
                                </dd>

                                <dt>
                                    Detail:
                                </dt>

                                <dd>
                                    <p class="text-justify">@Html.DisplayFor(model => model.Detail)</p>
                                </dd>

                                <dt>
                                    Gender:
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Gender)
                                </dd>

                                <dt>
                                    Sell Price:
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.SellPrice) $USD
                                </dd>

                                <dt>
                                    In Stock:
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.InStock)
                                </dd>

                                <dt>
                                    Display:
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.IsDisplay)
                                </dd>

                                <dt>
                                    Publish Date:
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.PublishDate)
                                </dd>

                                <dt>
                                    Category:
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Category.CategoryName)
                                </dd>
                                <dt></dt>
                                <dd>
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-actions no-color">
                                            <input type="submit" value="DELETE" class="btn btn-default" onclick="return confirm('Do you wanna delete this product?');" />
                                            <br />

                                        </div>
                                    }
                                </dd>
                            </dl>
                            <div>
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
